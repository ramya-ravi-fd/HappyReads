<h4>Sign up<h4>
  <div class="">
    <%= form_for(@user) do |f| %>

      <%= f.label :name ,class: "form-label"%>
      <%= f.text_field :name,class: "form-control width50" %>

      <%= f.label :email ,class: "form-label"%>
      <%= f.text_field :email ,class: "form-control width50" %>

      <%= f.label :password ,class: "form-label"%>
      <%= f.password_field :password,class: "form-control width50" %>

      <%= f.label :password_confirmation ,class: "form-label"%>
      <%= f.password_field :password_confirmation,class: "form-control width50" %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
